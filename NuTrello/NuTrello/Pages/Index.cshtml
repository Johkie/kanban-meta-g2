@page
@model IndexModel
<link rel="stylesheet" href="~/css/index.css" />
@{
    ViewData["Title"] = "Home page";
}

<div class="text-primary text-center">
    <br>
    <div class="boards-list">
    @if (Model.boards != null)
    {
        @foreach (var board in Model.boards)
        {          
        <div class="board-btn">
            <a id="@board.Id" asp-area="" asp-page="/Boards" asp-route-boardId="@board.Id">
            <button> @board.Title</button>
            </a>
        </div>
        }
    }
    </div>
    <div class ="addBoard">
        <h1>Board</h1>
        @* <a class="nav-link text-dark" asp-area="" asp-page="/Boards"> *@
        <img src="~/img/plus-circle-solid.svg" weight="64" height="64" data-toggle="modal" data-target="#boardModal" />
    </div>

<!-- Modal -->
<div class="modal fade" id="boardModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create New Task</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <input type="text" placeholder="Enter Title">
        <textarea name="task-desc" style="width:300px; height:200;" placeholder="Enter Description"></textarea>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <a class="nav-link text-dark" asp-area="" asp-page="/Boards">
        <button type="submit" class="btn btn-primary" onclick="@Model.insertList()">Create Task</button>
        </a>
      </div>
    </div>
  </div>
</div>